<div class="table-responsive-lg" style="font-size:14px">
  <table class="table table-hover table-borderless  text-left">
    <thead>
      <tr>
        <th colspan="4" id="boardName" class="bg-info"><%= category %></th>
      </tr>
      <tr>
        <th scope="column" class="postTitle" style="width:38%">제목</th>
        <th scope="column" class=" postUser" style="width:18%">작성자</th>
        <th scope="column" class="postLike" style="width:18%">공감</th>
        <th scope="column" class="postDate" style="width:18%">일자</th>
      </tr>
    </thead>
    <tbody>
      <% for( let index = 0; index < 9; index++ ) { %>
      <tr onclick="location.href='/boards/gossip/posts?action=post&number=postNumber'">
        <td nowrap scope="row">
          <%= postTitle%></td>
        <td><%= postUser%></td>
        <td>
          <%= postLike %>
        </td>
        <td><%= postDate %></td>
      </tr>
      <% } %>
    </tbody>
  </table>

</div>
<div type=" button" id="writeButton" onclick="location.href='/boards/gossip/posts?action=new_post'"
  class="btn btn-primary btn-sm float-right">
  Write</div>



<!-- board container end -->

<!-- pagination set -->

