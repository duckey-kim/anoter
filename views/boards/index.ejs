<div class="table-responsive-xl">
  <div class="row">
    <% data.forEach((posts,category)=>{%>
    <div class="col-md-6">
      <table class="table table-borderless table-hover">
        <colgroup>
          <col width='*%' />
          <col width='33%' />
          <col width='33%' />
        </colgroup>
        <thead>
          <tr>
            <th colspan="3" class="bg-info" onclick="location.href='/boards/<%= category %>'">
              <%= category%>
            </th>
          </tr>
        </thead>
        <tbody>
          <% posts.forEach((post)=>{ %>
          <tr onclick="location.href='/boards/<%=category%>/posts/<%= post.postnum%>'">

            <td scope="row"><%=post.posttitle%></a></td>
            <td><%=post.postuser%></td>
            <td><%=(post.uploadtime.toString())%></td>
          </tr>
          <%
            })
           %>
        </tbody>
      </table>
    </div>
    <% })%>
  </div>
</div>