<div class="table-responsive-xl">
  <div class="row">
    <% contents.forEach((posts,category)=>{%>
    <div class="col-md-6">
      <table class="table table-borderless table-hover">
        <colgroup>
          <col width='*%' />
          <col width='33%' />
          <col width='33%' />
        </colgroup>
        <thead>
          <tr>
            <td colspan="3" class="alert alert-info">
              <a href="/boards/<%= category %>"><%= category%></a>
            </td>
          </tr>
        </thead>
        <tbody>
          <% posts.forEach((post)=>{ %>
          <tr onclick="location.href='/boards/<%=category%>/posts?action=post&number=<%= post.postnum%>'">

            <td scope="row"><%=post.posttitle%></a></td>
            <td><%=post.postuser%></td>
            <td><%=(post.uploadtime.toString())%></td>
          </tr>
          <%
            })
           %>
        </tbody>
      </table>
    </div>
    <% })%>
  </div>
</div>